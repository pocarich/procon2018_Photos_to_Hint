<!-- SettingsSubFragmentAccountInfoレイアウトファイル -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="jp.androidbook.photostohint.SettingsSubFragmentAccountInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ヘッダ表示用レイアウト -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <!-- 背景表示 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ui_bar_back2" />

            <!-- シーン名テキスト表示 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="アカウント情報"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <!-- 戻るボタン表示 -->
            <ImageButton
                android:id="@+id/settings_sub_fragment_account_info_back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:layout_gravity="left"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/back_button0" />

        </FrameLayout>

        <!-- メイン画面表示用レイアウト -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="27">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <!-- テキスト表示 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:text="ID"
                    android:textStyle="bold"/>

                <!-- IDテキスト表示 -->
                <TextView
                    android:id="@+id/settings_sub_fragment_account_info_id_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="aaa"
                    android:singleLine="true"/>

                <!-- テキスト表示 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="メールアドレス"
                    android:textStyle="bold"/>

                <!-- メールアドレステキスト表示 -->
                <TextView
                    android:id="@+id/settings_sub_fragment_account_info_mail_address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="aaa@aaa.com"
                    android:singleLine="true"/>

                <!-- パスワード変更ボタン表示 -->
                <Button
                    android:id="@+id/settings_sub_fragment_account_info_reset_password_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/ui_message_box0"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="パスワード変更"/>

                <!-- メールアドレス変更ボタン表示 -->
                <Button
                    android:id="@+id/settings_sub_fragment_account_info_reset_mail_address_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/ui_message_box0"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="メールアドレス変更"/>

                <!-- ログアウトボタン表示 -->
                <Button
                    android:id="@+id/settings_sub_fragment_account_info_logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/ui_message_box0"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="ログアウト"/>

            </LinearLayout>

            <!-- ヘッダ下部影表示 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ui_shader" />


        </FrameLayout>

    </LinearLayout>

</FrameLayout>
