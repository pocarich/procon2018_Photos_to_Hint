<!-- MenuBarFragmentレイアウトファイル -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.androidbook.photostohint.MenuBarFragment">

    <!-- 背景表示用レイアウト -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 背景表示 -->　　
        <ImageView
            android:src="@drawable/ui_bar_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

    </FrameLayout>

    <!-- メニュー選択ボタン表示用レイアウト -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- 観光モードボタン -->
            <ImageButton
                android:src="@drawable/menu_component0"
                android:scaleType="fitXY"
                android:id="@+id/menu_bar_button0"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="26"
                android:background="@null"/>

            <!-- 探索モードボタン -->
            <ImageButton
                android:src="@drawable/menu_component1"
                android:scaleType="fitXY"
                android:id="@+id/menu_bar_button1"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:background="@null"/>

            <!-- アルバムモードボタン -->
            <ImageButton
                android:src="@drawable/menu_component2"
                android:scaleType="fitXY"
                android:id="@+id/menu_bar_button2"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:background="@null"/>

            <!-- 設定モードボタン -->
            <ImageButton
                android:src="@drawable/menu_component3"
                android:scaleType="fitXY"
                android:id="@+id/menu_bar_button3"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="26"
                android:background="@null"/>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>
