<!-- TitleFragmentレイアウトファイル -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.androidbook.photostohint.TitleFragment">

    <FrameLayout
        android:id="@+id/title_fragment_title_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 背景表示 -->
        <ImageView
            android:id="@+id/title_fragment_title_back"
            android:src="@drawable/title_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/title_fragment_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- テキスト表示 -->
            <TextView
                android:id="@+id/title_fragment_signature_textView"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="八戸工業高等専門学校電子情報工学部"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- タイトルロゴ表示 -->
            <ImageView
                android:id="@+id/title_fragment_title_rogo"
                android:layout_width="0dp"
                android:layout_height="278dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- スタートボタン表示 -->
            <ImageButton
                android:id="@+id/title_fragment_title_start_icon"
                android:layout_width="0dp"
                android:layout_height="91dp"
                android:layout_marginBottom="100dp"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="90dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/title_start"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</FrameLayout>