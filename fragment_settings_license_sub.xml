<!-- SettingsLicenseSubFragmentレイアウトファイル -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.androidbook.photostohint.SettingsLicenseSubFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ヘッダ表示用レイアウト -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <!-- 背景表示 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ui_bar_back2" />

            <!-- シーン名テキスト表示 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ライセンス"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <!-- 戻るボタン表示 -->
            <ImageButton
                android:id="@+id/settings_license_sub_fragment_back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:layout_gravity="left"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/back_button0" />

        </FrameLayout>

        <!-- メイン画面表示用レイアウト -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="27">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- ライセンス表記テキスト表示 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18sp"
                        android:text="市公共施設の公衆無線LANアクセスポイント一覧、八戸市、クリエイティブ・コモンズ・ライセンス 表示 4.0 国際\nhttps://creativecommons.org/licenses/by/4.0/dead.ja"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18sp"
                        android:text="指定避難所一覧、八戸市、クリエイティブ・コモンズ・ライセンス 表示 4.0 国際\nhttps://creativecommons.org/licenses/by/4.0/dead.ja"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18sp"
                        android:text="AED設置場所一覧、八戸市、クリエイティブ・コモンズ・ライセンス 表示 4.0 国際\nhttps://creativecommons.org/licenses/by/4.0/dead.ja"/>

                </LinearLayout>

            </ScrollView>

            <!-- ヘッダ下部影表示 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ui_shader" />


        </FrameLayout>

    </LinearLayout>

</FrameLayout>
