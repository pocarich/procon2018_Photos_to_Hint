<!-- SearchGetThemeSpotSubFragmentレイアウトファイル -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.androidbook.photostohint.SearchGetThemeSpotSubFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ヘッダ表示用レイアウト -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <!-- 背景表示 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ui_bar_back2" />

            <!-- シーン名テキスト表示 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="お題取得"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </FrameLayout>

        <!-- メイン画面表示用レイアウト -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="27">

            <!-- 全スポット探索済み表示用レイアウト -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/search_get_theme_spot_sub_fragment_completion_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- テキスト表示 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="100dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="100dp"
                    android:text="全てのお題スポットを探索済みです！"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <!-- お題取得画面表示用レイアウト -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/search_get_theme_spot_sub_fragment_get_theme_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- テキスト表示 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="168dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="100dp"
                    android:text="お題スポットを探して地域の魅力を発見しよう！！"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- お題取得ボタン表示 -->
                <Button
                    android:id="@+id/search_get_theme_spot_sub_fragment_button"
                    android:layout_width="216dp"
                    android:layout_height="74dp"
                    android:layout_marginBottom="100dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/button0"
                    android:text="お題を取得する"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <!-- ヘッダ下部影表示 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ui_shader" />


        </FrameLayout>

    </LinearLayout>

</FrameLayout>
